<div class="columns">
  <div class="column">
  <h2 class="title is-2">Top 10 Movies</h2>
    <ol class="ml-5">
    <% @movies.each do |movie| %>
      <li><%= link_to movie.title, movie %><em>(<%= link_to movie.production_company.name, movie.production_company.name%>)</em></li>
    <% end %>
    </ol>
    <p class="mt-5">
    <strong>
     <%= link_to "See the top 100 Movies", movies_path%>
    </strong>
    </p>
  </div>

  <div class="column">
  <h2 class="title is-2">Top 10 Companies</h2>
    <ol class="ml-5">
    <% @production_companies.each do |production_company| %>
      <li><%= link_to production_company.name, production_company %>
      <em> (<%= pluralize production_company.movies.count, "Top Movie"%>)</em></li>
    <% end %>
    </ol>
    <p class="mt-5">
    <strong>
     <%= link_to "See the top Production Companies", movies_path%>
    </strong>
    </p>
  </div>
</div>