<hr>


<h2 class="title is-2">
  <% if show_link %>
    <%= link_to movie.title, movie %>
  <% else %>
    <%= movie.title %>
  <% end %>
</h2>

<p>
  <strong>Description:</strong>
  <%= movie.description %>
</p>

<progress value="<%= movie.average_vote %>" max="10"><%= movie.average_vote %></progress>

<p>
  <strong>Duration:</strong>
  <%= movie.duration %>
</p>

<p>
  <strong>Year:</strong>
  <%= movie.year %>
</p>

<p>
<strong>Production Company:</strong>
  <%= link_to movie.production_company.name, movie.production_company%>
</p>
